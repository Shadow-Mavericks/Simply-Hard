script "DEATH_SOUNDS" DEATH
{
	if(IsNetworkGame() && ConsolePlayerNumber() != -1)
		terminate;

	str soundName = StrParam(s:"ded", d:random(1, NUM_DEATH_SOUNDS));
	AmbientSound(soundName, 127);
}


