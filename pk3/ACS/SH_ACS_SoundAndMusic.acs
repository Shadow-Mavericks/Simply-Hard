Script "UsedJoy" (void)
{
	if(CheckActorClass(0, "MaximusPrime"))
	{
		LocalSetMusic("sesb-08");
	}
	else if(CheckActorClass(0, "Fiend"))
	{
		LocalSetMusic("Joy_use");
	}
	else
	{
		LocalSetMusic("Joy_use1");
	}
	
	
	Delay(1575);
	GiveInventory("Joywithdrawl", 1);
	
	if(CheckActorClass(0, "MaximusPrime"))
	{
		LocalSetMusic("srtj-13");
	}
	else
	{
		LocalSetMusic("Joywthdl");
	}
	
	Delay(1575);
	LocalSetMusic("*");
}

